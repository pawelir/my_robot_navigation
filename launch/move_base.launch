<?xml version="1.0"?>

<launch>

    <!-- Provide arguments for planners (define planner you want to use)-->
    <arg name="base_global_planner" default="navfn/NavfnROS"/>
    <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

    <!-- Run move_base -->
    <node pkg="move_base" type="move_base" name="move_base" output="screen">
        
        <!-- Use defined arguments -->
        <param name="base_global_planner" value="$(arg base_global_planner)"/>
        <param name="base_local_planner" value="$(arg base_local_planner)"/>
        
        <!-- Read param files -->
            <!-- move_base params -->
        <rosparam file="$(find my_robot_navigation)/config/move_base_params.yaml" command="load"/>
            <!-- planners params -->
        <rosparam file="$(find my_robot_navigation)/config/global_planner.yaml" command="load"/>
        <rosparam file="$(find my_robot_navigation)/config/local_planner.yaml" command="load"/>
            <!-- common costmap params -->
        <rosparam file="$(find my_robot_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find my_robot_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap"/>
            <!-- global & local costmaps -->
        <rosparam file="$(find my_robot_navigation)/config/costmap_global.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find my_robot_navigation)/config/costmap_local.yaml" command="load" ns="local_costmap"/>

    </node>

</launch>